<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <servlet>
        <servlet-name>basicOperationsPerformer</servlet-name>
        <servlet-class>dev.tuzserik.service.oriented.architecture.lab1.server.servlets.BasicOperationsPerformer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>distanceCalculator</servlet-name>
        <servlet-class>dev.tuzserik.service.oriented.architecture.lab1.server.servlets.DistanceCalculator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>distanceTravelledSearcher</servlet-name>
        <servlet-class>dev.tuzserik.service.oriented.architecture.lab1.server.servlets.DistanceTravelledSearcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>wheelsNumberSearcher</servlet-name>
        <servlet-class>dev.tuzserik.service.oriented.architecture.lab1.server.servlets.WheelsNumberSearcher</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>basicOperationsPerformer</servlet-name>
        <url-pattern>/basic-operations-performer/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>distanceCalculator</servlet-name>
        <url-pattern>/distance-calculator/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>distanceTravelledSearcher</servlet-name>
        <url-pattern>/distance-travelled-searcher/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>wheelsNumberSearcher</servlet-name>
        <url-pattern>/wheels-number-searcher/*</url-pattern>
    </servlet-mapping>
</web-app>
